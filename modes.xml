<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- urd → pan -->

  <mode name="urd-pan" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="urd-pan.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="urd-pan.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="urd-pan.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="urd-pan.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="urd-pan.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-urd-pan.urd-pan.t1x"/>
        <file name="urd-pan.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-urd-pan.urd-pan.t2x"/>
        <file name="urd-pan.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-urd-pan.urd-pan.t3x"/>
        <file name="urd-pan.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="urd-pan.autogen.bin"/>
      </program>

    </pipeline>
  </mode>

  <!-- pan → urd -->

  <mode name="pan-urd" install="yes" gendebug="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="pan-urd.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="pan-urd.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="pan-urd.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="pan-urd.autobil.bin"/>
      </program>
      <program name="lrx-proc">
        <file name="pan-urd.autolex.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-urd-pan.pan-urd.t1x"/>
        <file name="pan-urd.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-urd-pan.pan-urd.t2x"/>
        <file name="pan-urd.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-urd-pan.pan-urd.t3x"/>
        <file name="pan-urd.t3x.bin"/>
      </program>
      <program name="lt-proc $1">
        <file name="pan-urd.autogen.bin"/>
      </program>

    </pipeline>
  </mode>
</modes>

